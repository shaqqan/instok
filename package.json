{
  "name": "telegram-bot",
  "version": "1.0.0",
  "description": "A Telegram bot built with Grammy, TypeScript, and PostgreSQL",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "db:migrate": "ts-node src/database/migrate.ts",
    "docker:build": "docker build -t telegram-bot .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "keywords": ["telegram", "bot", "grammy", "typescript", "postgresql"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "grammy": "^1.21.1",
    "pg": "^8.11.3",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
